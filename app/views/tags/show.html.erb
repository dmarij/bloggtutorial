<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
<br/>
<p><%= link_to '<< All tags', tags_path %></p>
<% if logged_in? %>
<p><%= link_to 'Delete', tag_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"} %></p>
<% end %>